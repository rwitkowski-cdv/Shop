@page "/product"
@using System.Globalization
@inject IProductRepository _productRepository
@inject IJSRuntime _jsRuntime

<PopUpModal OnModalConfirm="ConfirmDeleteProduct" 
    ButtonStyle="btn-danger" 
    ButtonText="Delete" 
    Title="For sure you want to delete ?">
</PopUpModal>


@if (IsLoading)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/images/loading_page.png" alt="loading" />
    </div>
}
else
{
    <div class="card shadow boarder-0 mt-4">
        <div class="card-header bg-black bg-gradient ml-0 py-3"> 
            <div class="row">
                <div class="col-12 text-center"> 
                    <h2 class="text-white py-2">Product List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end"> 
                    <a href="product/create" class="btn btn-lg btn-primary" style="width:300px">
                        <i class="bi bi-plus-square-fill"></i>
                        Create New Product
                    </a>
                </div>
            </div>
            @if(Products.Any())
            {
                <table class="table table-border table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>SKU</th>
                            <th>Product Pic</th>
                            <th>Gross Amount</th>
                            <th>Net Amount</th>
                            <th>Tax Amount</th>
                            <th>Description</th>
                            <th>IsAvailable</th>
                            <th>Tag</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.SKU</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 1000px; height: auto;" />
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                </td>
                                <td>@product.GrossAmount.ToString("C", CultureInfo.GetCultureInfo("pl-PL"))</td>
                                <td>@product.NetAmount.ToString("C", CultureInfo.GetCultureInfo("pl-PL"))</td>
                                <td>@product.TaxAmount.ToString("C", CultureInfo.GetCultureInfo("pl-PL"))</td>
                                <td>@product.Description</td>
                                <td>@product.IsAvailable</td>
                                <td>@product.Tag</td>
                                <td>@product.Category.Name</td>
                                <td>
                                    <a href=@($"product/update{product.Id}") class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    <button class="btn btn-danger" @onclick="() => HandleDelete(product.Id)">
                                        <i class="bi bi-trash3-fill"></i>
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    }

@code {
    private bool IsLoading { get; set; } = true;    
    private IEnumerable<Product> Products { get; set; } = new List<Product>();
    private Guid _idToDelete { get; set; } = Guid.Empty;

    protected override async Task OnAfterRenderAsync(bool firsRender)
    {
        if (firsRender)
        {
            await LoadProducts();
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadProducts()
    {
        Products = await _productRepository.GetAllAsync();
    }
    private async Task HandleDelete(Guid productId)
    {
        _idToDelete = productId;
        await _jsRuntime.InvokeVoidAsync("showPopUpModal");
    }

    private async Task ConfirmDeleteProduct(bool isConfirmed)
    {
        IsLoading = true;
        await _jsRuntime.InvokeVoidAsync("hidePopUpModal");
        if(isConfirmed && _idToDelete != Guid.Empty)
        {
            var res = await _productRepository.DeleteAsync(_idToDelete);
            if(res)
                await _jsRuntime.ShowSuccessNotification("Deleted Successfully");
            else
                await _jsRuntime.ShowErrorNotification("Deleted error");

            await LoadProducts();
        }
        _idToDelete = Guid.Empty;
        IsLoading = false;

    }

}
